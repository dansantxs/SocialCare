@model EmprestimoLivros.WEB.Models.ComprasViewModel

@{
    ViewData["Title"] = "Detalhes da Compra";
}

<h1>Detalhes da Compra</h1>

<div>
    <h4>Data da Compra: @Model.DataCompra.ToShortDateString()</h4>
    <hr />
    <h4>Itens da Compra</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.NomeProduto</td>
                    <td>@item.Quantidade</td>
                    <td>@item.PrecoUnitario.ToString("C")</td>
                    <td>@(item.PrecoUnitario * item.Quantidade)</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</div>