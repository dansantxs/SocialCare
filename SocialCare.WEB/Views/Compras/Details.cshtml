@model SocialCare.WEB.Models.ComprasViewModel

@{
    ViewData["Title"] = "Detalhes da Compra";
}

<h1>Detalhes da Compra</h1>
<hr />
<div>
    <h4>Compra ID: @Model.Id</h4>
    <p><strong>Data da Compra:</strong> @Model.DataCompra.ToString("dd/MM/yyyy")</p>
    <p><strong>Pessoa:</strong> @Model.NomePessoa</p>
    <p><strong>Total:</strong> @Model.Total</p>

    <h3>Itens da Compra</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.NomeProduto</td>
                    <td>@item.Quantidade</td>
                    <td>@item.PrecoUnitario</td>
                    <td>@(item.PrecoUnitario * item.Quantidade)</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</div>