@model SocialCare.DATA.Models.Produtos

@{
    ViewData["Title"] = "Alterar Produto";
}

<h1>Alterar dados do produto</h1>

<h4>Altere os dados a baixo</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" required min="0.01" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" required min="0" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>